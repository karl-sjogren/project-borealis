@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (Context.User?.Identity?.IsAuthenticated == true) {
    <li class="nav-item">
        <a class="nav-link">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Account" asp-action="SignOut" asp-route-returnUrl="@Url.Action("Index", "Home")" class="nav-link">Logout</a>
    </li>
}
</ul>
