@model UsersDetailsViewModel

@{
    ViewData["Title"] = "User details";
}

<div class="row">
    <h1 class="display-4">
        @Model.User.Name
    </h1>

    <div class="col-12 col-md-6">
        <dl class="row">
            <dt class="col-sm-3">External ID</dt>
            <dd class="col-sm-9">@Model.User.ExternalId</dd>

            <dt class="col-sm-3">Is approved</dt>
            <dd class="col-sm-9">@(Model.User.IsApproved ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Is admin</dt>
            <dd class="col-sm-9">@(Model.User.IsAdmin ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Is locked out</dt>
            <dd class="col-sm-9">@(Model.User.IsLockedOut ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Created at</dt>
            <dd class="col-sm-9">@Model.User.CreatedAt</dd>

            <dt class="col-sm-3">Updated at</dt>
            <dd class="col-sm-9">@Model.User.UpdatedAt</dd>
        </dl>
    </div>

    <form method="post" enctype="application/x-www-form-urlencoded">
        @if(Model.User.IsApproved) {
            <input type="hidden" name="isApproved" value="true" />
        } else {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="is-approved" name="IsApproved" value="true" checked="@Model.IsApproved">
                <label class="form-check-labe" for="is-approved">
                    Is approved
                </label>
            </div>
        }

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="is-admin" name="IsAdmin" value="true" checked="@Model.IsAdmin">
            <label class="form-check-labe" for="is-admin">
                 Is admin
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="is-locked-out" name="IsLockedOut" value="true" checked="@Model.IsLockedOut">
            <label class="form-check-labe" for="is-locked-out">
                 Is locked out
            </label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
